  (?<whitespace>\s+)
| (?<string>
    '(?:[^\\'\n\r]*|\\[^])*'
  | "(?:[^\\"\n\r]*|\\[^])*"
  )
| (?<hexstring>
    hex
    (?:
      '(?:(?:[0-9a-fA-F]{2})+(?:_(?:[0-9a-fA-F]{2})+)*)?'
    | "(?:(?:[0-9a-fA-F]{2})+(?:_(?:[0-9a-fA-F]{2})+)*)?"
    )
  )
| (?<pragmatoken>
    (?:
      [^;\s/'"]
    | /(?![/*])
    )+
  )
| (?<comment>
    //.*
  | /\*[^]*?\*/
  )
| (?<semicolon>;)
| (?<eof>$)
